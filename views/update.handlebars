<div class="container">
    <h1>New Post</h1>
    <form class="update-form">
        <div class="form-group">
            <label for="postName">Post Title:</label>
            <input class="form-control" name="postName" id="postName" type="text" value="{{post.name}}"></input>
        </div>
        <div class="form-group">
            <label for="postBody">Post:</label>
            <input class="form-control" name="postBody" id="postBody" type="text" value="{{post.body}}"></input>
        </div>
        <button class="btn btn-sm" type="submit">Update!</button>
    </form>
</div>

<script src="../../update.js"></script>